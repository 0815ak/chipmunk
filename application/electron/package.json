{
  "name": "logviewer",
  "version": "1.0.0",
  "description": "LogViewer",
  "main": "compiled/main.js",
  "copyright": "Copyright © 2018 year E.S.R.Labs",
  "build": {
    "appId": "com.logviewer.de",
    "productName": "",
    "copyright": "Copyright © 2018 year E.S.R.Labs",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "esrlabs",
        "repo": "logviewer"
      }
    ],
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "./build/mac/icon.icns",
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ]
    }
  },
  "dependencies": {
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jasmine": "^2.8.6",
    "@types/node": "^10.12.0",
    "@types/uuid": "^3.4.4",
    "dmg-builder": "^6.0.0",
    "electron": "^3.0.6",
    "electron-builder": "^20.29.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build-ts": "tsc -p ./tsconfig.json",
    "build": "./node_modules/.bin/build --mac",
    "publish": "./node_modules/.bin/build --mac -p always"
  }
}
