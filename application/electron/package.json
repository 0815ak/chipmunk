{
  "name": "logviewer",
  "version": "1.0.0",
  "description": "LogViewer",
  "main": "./dist/compiled/src/main.js",
  "copyright": "Copyright © 2019 year E.S.R.Labs",
  "build": {
    "appId": "com.logviewer.de",
    "productName": "",
    "copyright": "Copyright © 2019 year E.S.R.Labs",
    "files": [
      "./dist/compiled/**"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "esrlabs",
        "repo": "logviewer"
      }
    ],
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "./build/mac/icon.icns",
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ]
    },
    "linux": {
      "icon": "./build/png"
    },
    "win": {
      "icon": "./build/win/icon.ico"
    }
  },
  "dependencies": {
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jasmine": "^3.3.8",
    "@types/node": "^10.12.0",
    "@types/uuid": "^3.4.4",
    "dmg-builder": "^6.0.0",
    "electron": "^4.0.3",
    "electron-builder": "^20.29.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "electron": "./node_modules/.bin/electron ./dist/compiled/src/main.js",
    "build-ts": "tsc -p ./tsconfig.json",
    "start": "npm run build-ts && npm run electron",
    "postinstall": "electron-builder install-app-deps",
    "build-mac": "./node_modules/.bin/build --mac",
    "publish-mac": "./node_modules/.bin/build --mac -p always",
    "build-linux": "./node_modules/.bin/build --linux",
    "publish-linux": "./node_modules/.bin/build --linux -p always",
    "build-win": "./node_modules/.bin/build --win",
    "publish-win": "./node_modules/.bin/build --win -p always",
    "package-check": "../node_modules/.bin/npm-check",
    "package-upgrade": "../node_modules/.bin/npm-check -y"
  }
}
